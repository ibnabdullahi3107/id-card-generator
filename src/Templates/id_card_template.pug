doctype html
html
  head
    style
      | body { font-family: Arial, sans-serif; }
      | .id-card { width: 1024px; height: 512px; background-image: url('/images/GSU_IDCARD.png'); background-size: cover; position: relative; }
      | .details { position: absolute; top: 140px; left: 50px; font-size: 18px; color: #000; }
      | .name { position: absolute; top: 150px; left: 150px; }
      | .reg-number { position: absolute; top: 200px; left: 150px; }
      | .department { position: absolute; top: 250px; left: 150px; }
      | .next-of-kin { position: absolute; top: 300px; left: 250px; }
      | .expire-date { position: absolute; top: 480px; left: 870px; }
      | .photo { position: absolute; top: 150px; right: 50px; width: 150px; height: 200px; border: 2px solid #000; }
  body
    .id-card
      .details
        .name Name: #{name}
        .reg-number Reg. No: #{reg_number}
        .department Department: #{department}
        .next-of-kin Next of Kin Phone No: #{next_of_kin}
        .expire-date Exp: #{expire_date}
        img.photo(src=photo)
